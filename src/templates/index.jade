doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", type="text/css", href="./assets/css/main.css")
        link(rel="stylesheet", type="text/css" ,href="../node_modules/materialize-css/dist/css/materialize.min.css")
        link(href="https://fonts.googleapis.com/css?family=Maven+Pro", rel="stylesheet")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
        title Replica con Pug
    body
        .container-fluid.responsive-img
                .col.s12
                    ul.right
                       li
                          img.response.img(src="assets/img/pre-nav/facebook-logo.png" class="icon-soc" href="#")
                          img.response.img(src="assets/img/pre-nav/google-plus-logo.png" class="icon-soc" href="#")
                          img.response.img(src="assets/img/pre-nav/linkedin-letters.png" class="icon-soc" href="#")
                          img.response.img(src="assets/img/pre-nav/twitter.png" class="icon-soc" href="#")
        .container-fluid
                .row
                  .col.s12.m12.l12
                        .col.s6.left
                                img.mg-l.responsive-img(src="assets/img/logo.png")
                        .container-fluid.responsive-img
                            .col.s6
                                  ul.right
                                    li
                                      a(href="#") HOME
                                    li
                                      a(href="#") PAGES
                                            i.material-icons arrow_drop_down
                                    li
                                      a(href="#") BLOG
                                            i.material-icons arrow_drop_down
                                    li
                                      a(href="#") PORTAFOLIO
                                            i.material-icons arrow_drop_down
                                    li
                                      a(href="#") SHORTCODES
                                            i.material-icons arrow_drop_down
                                    li
                                      a(href="#")
                                            i.material-icons search
            section#hill.container-fluid
                    .row
                        mixin parrafo-princ(titulo,parrafo)
                            .col.s6
                                .elementos
                                    h4 #{titulo}
                                    p.estilo-parrafo #{parrafo}
                                button.btn.right-align Sign Up
                            .container.col.s6
                                img.right.pos-rel.pos-hill.responsive-img(src="assets/img/home/slider/hill.png")  
                                img.right.pos-ab.responsive-img.pos-bird1(src="assets/img/home/slider/birds1.png")
                                img.right.pos-ab.responsive-img.pos-bird2(src="assets/img/home/slider/birds2.png")
                                img.right.pos-ab.pos-casa.responsive-img(src="assets/img/home/slider/house.png")
                                img.right.pos-ab.responsive-img.pos-sun(src="assets/img/home/slider/sun.png")
                        +parrafo-princ("We are creative nerds","Why our Clients love to work with us lore Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.")
            .container-fluid
                    img.under(src="assets/img/home/under.png")
            .container-fluid
                    img.footer-png(src="assets/img/home/footer.png")
            .container.pos-rel
                img.pos-rel(src="assets/img/home/profile1.png")
         script(type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js")               
         script(type="text/javascript" src="../node_modules/materialize-css/dist/js/materialize.min.js")
         script(type="text/javascript" src="./assets/js/main.js")
         




